<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% posts.forEach((item) => { %>
<h1><%= item.title %></h1>
<% if (item.content.length >= 100) { %>
<p><%= item.content.slice(0, 100) + ' ... ' %><a href="<%= `/posts/${item.title}` %>">Read More</a></p>
<% } %>
<% }); %>

<%- include('partials/footer'); -%>